{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["esnext"],
        "sourceMap": true,
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "es2020",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "noUncheckedIndexedAccess": true,
        "rootDir": "src",
        "outDir": "./dist"
    },
    "include": ["src"],
    "exclude": ["./dist/**"]
}
